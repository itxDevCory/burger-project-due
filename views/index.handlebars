<main class="container">
  <div class="d-flex justify-content-center">
    <img src="burg.png" alt="burger"
        style="max-height: 300px;"></a>
  </div>
  <h1>Da Burger!</h1>

  <h2>I don't want to eat!</h2>

  <ul>
    {{#each burgers}}
    {{#unless devouredy}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <h2>Eat da Burger!</h2>

 <ul>
                {{#each burger}}
                {{#unless devoured}}
                <li>
                    <button class="eatBtn btn btn-danger" id="{{id}}">Devour It!</button>
                    {{burger_name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h2>Burgers Gone From Dis World!</h2>

            <ul>
                {{#each burger}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div>
        <h2>Add Da Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <input type="text" class="form-control" id="burg" name="name" placeholder="Burger Name">
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>
    </div>